<div class="subscribe-area pt-75 pb-25 wow slideInUp" data-background="{% if section.settings.background_image != null %}{{section.settings.background_image | image_url }}{% else %}{{'subscribe-bg.jpg' | asset_url}}{% endif %}">
  <div class="container">
    <div class="row align-items-center">
      <div class="col-xl-5  col-lg-4  col-md-12  col-sm-12 col-12">
        <div class="section-title  mb- 50">
          <span class="theme-color d-block pb-2">{{ section.settings.newsletter_sub_title }}</span>
          <h3>{{ section.settings.newsletter_title }}</h3>
        </div>
      <!-- /section-title -->
      </div>
      <!-- /col -->
      <div class="col-xl-7  col-lg-8  col-md-12  col-sm-12 col-12">
        <div class="subscribe-form-area subscribe-form-area1 mb-50">
          {% form 'customer', class: 'd-sm-flex align-items-center justify-content-between' %}
            {% if form.posted_successfully? %}
                <span>Sucessfull</span>
            {% endif %}
            <div class="subscribe-info position-relative mr-20">
              <input
                class="sub-name form-control border-0 pl-35 theme-color"
                type="email"
                name="contact[email]"
                id="sub-name"
                placeholder="Enter Your Email Address">
            </div>
            <div class="subscribe-btn">
                <button type="submit" class="web-btn d-block theme-bg white text-uppercase over-hidden position-relative plr-48 px-5"> {{ section.settings.newsletter_button_text }}
                    <span class="pl-2">
                  <i class="fa fa-long-arrow-right" aria-hidden="true"></i>
                </span>
                </button>
            </div>
          {% endform %}


        </div>
      </div>
    <!-- /col -->
    </div>
  <!-- /row -->
  </div>
<!-- /container -->
</div>


{% schema %}
  {
    "name": "News Letter",
    "settings": [
      {
        "type": "image_picker",
        "id": "background_image",
        "label": "Background Image "

      }, {
        "type": "text",
        "id": "newsletter_sub_title",
        "label": "News Letter Sub Tiltle",
        "default": "Get More Updates"

      }, {
        "type": "text",
        "id": "newsletter_title",
        "label": "News Letter  Tiltle ",
        "default": "Our Newsletters"

      }, {
        "type": "text",
        "id": "newsletter_button_text",
        "label": "News Letter  Button Text ",
        "default": "Subscribe Now"

      }

    ],
    "presets": [
      {
        "name": "News Letter"
      }
    ]
  }
{% endschema %}